<div>
  <%= flash[:notice] %>
</div>

<div class="container">
  <div class="row">
<%= render 'books/menu', book: @book, user: @user %>

<div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
  <table class="table">
    <tbody>
      <tr>
        <td>
          <%= image_tag @user.get_profile_image(100,100) %><br>
          <%=link_to @user.name,user_path(@user.id) %>
        </td>
        <td>
          <%= link_to @book.title,book_path(@book.id) %>
        </td>
        <td>
          <%= @book.body %>
        </td>
        <td>
          <%= link_to "Edit", edit_book_path(@book.id), class: 'btn btn-success' %>
        </td>
        <td>
          <% if @book.user == current_user %>
          <%= link_to "Destroy", book_path(@book.id),method: :derete, class: 'btn btn-danger' %>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
