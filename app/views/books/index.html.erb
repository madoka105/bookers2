<h1>投稿一覧</h1>

<% @books.each do |book| %>

<div>
  <%= link_to book_path(book.id) do %>
    <%= image_tag book.get_image %>
  <% end %>
  
  <p>投稿ユーザー画像:<%= image_tag book.user.get_profile_image(100,100) %></p>

  <p>タイトル</p>
  <span>
    <%= link_to book.title, book_path(book.id) %>
  </span>
  
  <p>画像</p>
  <%= image_tag book.image, size: "200x200" %>
  
<% end %>