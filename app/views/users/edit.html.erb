<% if @user.errors.any? %>
  <%= @user.errors.count %>error prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <lavel for="user_name">Name</lavel></br>
          <%= f.text_field :name %>
        </div>
        <div class="form-group">
          <label for="inputImage">Image</label><br>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
        </div>
        <div class="form-group">
          <lavel for="inputIntroduction">Introduction</lavel><br>
          <%= f.text_area :introduction %>
        </div>
          <%= f.submit "Update User", class: "btn btn-secondary" %>
      <% end %>
  </div>
</div>
