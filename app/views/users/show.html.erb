<div class="container">
  <div class="row">
    <div class="col-3">
      <h3>User info</h3>
      <%= image_tag @user.get_profile_image(100,100) %>
      <% if @user == current_user.id %>
        <p><%= link_to "プロフィール編集",  edit_user_path(@user) %></p>
      <% end %>
      
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
          </tr>
          
          
        </tbody>
      </table>
      <h3>New book</h3>
      <% if @book.errors.any? %>
        <%= @book.errors.count %>件のエラーが発生しました
        <ul>
          <%= @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      
      <%= form_with model: @book, url: '/books', method: :post do |f| %>
      
        <h4>タイトル</h4>
        <%= f.text_field :title %>
      
        <h4>本文</h4>
        <%= f.text_area :body %>
        
        
        <%= f.submit '投稿' %>
      
      <% end %>
    </div>
    <div class="col-8 offset-1">
      <h3>Books</h3>
    </div>
  </div>
</div>